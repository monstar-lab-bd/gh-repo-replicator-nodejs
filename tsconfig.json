{
    "compilerOptions": {
      "rootDir": "src",
      "outDir": "dist",
      "target": "ES2015",
      "module": "CommonJS",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "sourceMap": false,
      "allowJs": true,
      "removeComments": true,
      "preserveConstEnums": true,
    },
    "include": ["src/index.ts"],
    "exclude": [
      "node_modules",
      "dist",
      "templates"
    ]
  }
